<header class="header flex flex-row justify-between items-center gap-10 w-screen px-4 py-4 text-onBackground z-20 top-0">
  <a href="/" class="font-bold text-xl tracking-wide p-[2px] rounded-md text-primary hover:brightness-150">
    <i>njfamirm</i>
  </a>
  <div class="flex flex-row justify-end grow gap-8 items-center text-md font-bold">
    {% for menu in navigation.topAppBar %}
      <a class="text-onBackground hidden lg:block state-onBackground hover:no-underline {% if page.url == menu.url %} brightness-150 {% endif %}" href="{{ menu.url }}">
        {{ menu.key }}
      </a>
    {% endfor %}
    <span class="menu-button block lg:hidden m-1 p-0 cursor-pointer z-30">
      <svg fill="currentColor" xmlns="http://www.w3.org/2000/svg" height="32" viewBox="0 -960 960 960" width="32"><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/></svg>
    </span>
  </div>
</header>
