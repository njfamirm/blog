{
  "name": "njfamirm-ws",
  "version": "1.2.0",
  "description": "S. Amir Mohammad Najafi personal website.",
  "main": "index.js",
  "repository": "git@github.com:njfamirm/njfamirm.ir.git",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com>",
  "license": "MIT",
  "private": true,
  "browserslist": "> 1.5%, not dead",
  "scripts": {
    "f": "yarn format",
    "s": "yarn start",
    "w": "yarn start",
    "b": "yarn build",
    "c": "yarn clean",
    "pl": "git pull",
    "p": "git push --follow-tags",
    "rl": "run-s pl clean build release p",
    "cf": "git clean -d -x -f --exclude=node_modules --exclude=_data --exclude=.yarn",
    "cb": "run-s clean build",
    "l": "yarn lint",
    "lint": "run-s lint:ts",
    "lint:ts": "eslint . --config .eslintrc.json --ext .ts",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:ts --fix",
    "format:prettier": "prettier . --ignore-path .gitignore --write",
    "start": "eleventy --serve",
    "watch": "yarn start",
    "clean": "rm -rfv dist",
    "build": "yarn build:eleventy",
    "build:tsc": "tsc --build --pretty",
    "build:eleventy": "eleventy",
    "release": "standard-version --sign"
  },
  "standard-version": {
    "scripts": {
      "prerelease": "rm -f CHANGELOG.md"
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-img": "^3.1.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@alwatr/icon-set-material": "^0.1.1",
    "@alwatr/logger": "^1.1.5",
    "@alwatr/style": "^1.2.0",
    "@swc/html": "^0.0.28",
    "@types/node": "^20.8.2",
    "@types/quicklink": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "cssnano": "^6.0.1",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.49.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "markdown-it": "^13.0.2",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-eleventy-img": "^0.10.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.1.4",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "quicklink": "^2.3.0",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@3.6.3"
}
