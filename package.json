{
  "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
  "name": "njfamirm-blog",
  "version": "1.8.0",
  "description": "S. Amir Mohammad Najafi personal website.",
  "main": "index.js",
  "repository": "git@github.com:njfamirm/blog.git",
  "author": "S. Amir Mohammad Najafi <njfamirm@gmail.com>",
  "license": "MIT",
  "private": true,
  "browserslist": "> 1.5%, not dead",
  "scripts": {
    "f": "yarn format",
    "l": "yarn lint",
    "w": "yarn watch",
    "b": "yarn build",
    "c": "yarn clean",
    "cb": "run-s clean build",
    "rl": "run-s pl clean build release p",
    "lint": "run-s lint:ts lint:es",
    "lint:es": "eslint . --cache",
    "lint:ts": "tsc --build --pretty",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "yarn lint:es --fix",
    "format:prettier": "prettier . --ignore-path .eslintignore --write",
    "clean": "run-s clean:cache clean:dist",
    "clean:cache": "rm -rfv .cache",
    "clean:dist": "rm -rfv dist",
    "release": "standard-version --sign",
    "clean:full": "git clean -d -x -f --exclude=node_modules --exclude=cloud --exclude=.yarn* --exclude=.pnp*",
    "watch": "yarn 11ty --serve",
    "build": "yarn 11ty",
    "pl": "git pull --prune --progress --autostash --rebase=true -v",
    "p": "git push --follow-tags origin main -v",
    "11ty": "eleventy"
  },
  "standard-version": {
    "scripts": {
      "prechangelog": "rm -f CHANGELOG.md"
    }
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.1",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@alwatr/icon-set-material": "^2.0.1",
    "@alwatr/logger": "^3.2.6",
    "@alwatr/style": "^2.2.0",
    "@pagefind/default-ui": "^1.1.0",
    "@swc/html": "^0.0.28",
    "@types/alpinejs": "^3.13.10",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "alpinejs": "^3.14.1",
    "cssnano": "^7.0.3",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.6.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.0.1",
    "markdown-it-attrs": "^4.1.6",
    "markdown-it-eleventy-img": "^0.10.2",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.1.0",
    "postcss": "^8.4.39",
    "postcss-import": "^16.1.0",
    "postcss-preset-env": "^9.5.15",
    "postcss-variable-compress": "^3.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "workbox-build": "^7.1.1"
  },
  "packageManager": "yarn@4.0.2"
}
